{
  "name": "wysper",
  "version": "1.0.0",
  "description": "A stealthy screenshot and OCR tool",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --no-sandbox --disable-gpu",
    "test-speech": "node test-azure-speech.js"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.3.1",
    "electron": "^29.1.0",
    "microsoft-cognitiveservices-speech-sdk": "^1.40.0",
    "node-record-lpcm16": "^1.0.1",
    "tesseract.js": "^6.0.1"
  },
  "build": {
    "appId": "com.apple.WindowServer",
    "productName": "WindowServer",
    "mac": {
      "category": "public.app-category.utilities",
      "target": "dmg",
      "darkModeSupport": true,
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    }
  }
}
